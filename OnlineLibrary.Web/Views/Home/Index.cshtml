@model IEnumerable<OnlineLibrary.Domain.Models.BaseModels.Notification>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Here are our latest books!</p>
</div>

<div class="row">
    @foreach (var notification in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@notification.Book?.ImageUrl" class="card-img-top" alt="@notification.Book?.Title" />
                <div class="card-body">
                    <h5 class="card-title">@notification.Book?.Title</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">@notification.Date.ToString("g")</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
