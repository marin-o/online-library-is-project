@model OnlineLibrary.Domain.Models.BaseModels.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Details</h1>

<div class="card mb-4 shadow-sm">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img class="card-img" src="@Model.ImageUrl" alt="@Model.Title" style="object-fit: cover; height: 100%;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Title</h3>
                <p class="card-text">
                    <strong>Author:</strong> @Model.Author.Name <br />
                    <strong>ISBN:</strong> @Model.ISBN <br />
                    <strong>Year:</strong> @Model.Year <br />
                    <strong>Pages:</strong> @Model.Pages <br />
                    <strong>Available:</strong> @(Model.Available ? "Yes" : "No") <br />
                    <strong>Category:</strong> @Model.Category.Name <br />
                </p>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
